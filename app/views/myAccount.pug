include mixins/nav

head
    title #{title}

    link(rel='stylesheet', href='/assets/css/global.css')
    link(rel='stylesheet' href='/assets/css/reset.css')
    link(rel='stylesheet' href='/assets/css/myaccount.css')
    link(rel='stylesheet' href='/assets/css/nav.css')
    link(rel='stylesheet' href='/assets/css/hikecard.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    script(src='/assets/scripts/account.js' type='text/javascript')
body
    +navbar()


    div(class="content")
        div(class="card-container")
            br
            br
            br
            br
            div(id="update-card" style='display: flex;')
                div(class='section')
                    p(id='card-title') Curent User Information
                    button(id="beDriverButton") Become A Driver
                    button(id="noDriverButton") Resign As Driver
                    form(id='driverForm' name='info')

                        p(id='instruction') Please fill out the required fields to become a driver.
                        input(id='licensePlate' class='driver-info' type='text' placeholder='LICENSE PLATE' name='licensePlate',required,pattern='[A-Za-z0-9_]{3,20}',title='Needs to be 3-20 characters and Alphanumeric')
                        
                        input(id='carModel' class='driver-info' type='text' placeholder='CAR MODEL' name='carModel',required,pattern='[A-Za-z0-9_]{3,20}',title='Needs to be 3-20 characters and Alphanumeric')                    
                        
                        input(id='beDriverButton' class='user-info-button' type='submit' value='Add Information')
                div(class='section')
                    form(id='updateInfo' name='info')
                        input(id='username' class='user-info' type='text' placeholder='USERNAME' name='username' disabled, required, pattern='[A-Za-z0-9_]{3,20}' title='Needs to be 3-20 characters and Alphanumeric')

                        input(id='password' class='user-info' type='password' placeholder='PASSWORD' name='password',pattern='[A-Za-z0-9_]{3,20}',title='Needs to be 3-20 characters and Alphanumeric')

                        input(id='firstName' class='user-info' type='text' placeholder='FIRST NAME' name='firstName', required, pattern='^[A-z]+$' title='Alphabetic letters only')

                        input(id='lastName' class='user-info' type='text' placeholder='LAST NAME' name='lastName', required, pattern='^[A-z]+$' title='Alphabetic letters only')

                        input(id='email' class='user-info' type='email' placeholder='EMAIL' name='email', required)

                        p(class ="driverInfo")

                        input(id='licensePlateField' class='user-info driverInfo' type='text' placeholder='LICENSE PLATE' name='licensePlate',pattern='[A-Za-z0-9_]{3,20}',title='Needs to be 3-20 characters and Alphanumeric')

                        input(id='carModelField' class='user-info driverInfo' type='text' placeholder='CAR MODEL' name='carModel',pattern='[A-Za-z0-9_]{3,20}',title='Needs to be 3-20 characters and Alphanumeric')

                        input(id='updateUserButton' class='user-info-button' type='submit' value='Save Changes')

                    button(id='deleteUser') Delete Account
                    br
